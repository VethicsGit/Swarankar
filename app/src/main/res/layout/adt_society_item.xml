<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_margin = "4dp"
    android:orientation = "vertical"
    android:elevation="5dp"
    app:cardCornerRadius = "4dp"
    app:cardElevation = "2dp">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background = "@drawable/gradient7"
        android:orientation = "vertical"
       >

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent">

            <FrameLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent">

                <ImageView
                    android:id = "@+id/society_img_society"
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:background = "@mipmap/ic_launcher"
                    android:scaleType = "fitXY" />

                <RelativeLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent">

                    <LinearLayout
                        android:layout_width = "match_parent"

                        android:layout_height = "wrap_content"
                        android:layout_alignParentBottom = "true"
                        android:background = "@drawable/bottom_shadow"
                        android:orientation = "horizontal"
                       >

                        <LinearLayout
                            android:layout_width = "match_parent"
                            android:layout_height = "wrap_content"
                            android:layout_alignParentBottom = "true"
                            android:layout_marginTop = "70dp"
                            android:orientation = "vertical"
                            android:layout_marginStart="5dp"
                            >

                            <LinearLayout
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:orientation = "vertical">

                                <TextView
                                    android:id = "@+id/society_text_ename_society"

                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_weight = "0.7"
                                    android:padding = "@dimen/_3sdp"
                                    android:text = "Rajashthan contact"
                                    android:textAllCaps = "true"
                                    android:textColor = "@color/white"
                                    android:textStyle = "bold" />

                                <TextView
                                    android:id = "@+id/society_text_edate"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_weight = "1"
                                    android:padding = "@dimen/_3sdp"
                                    android:text = "5/4/2005"
                                    android:textAlignment = "viewStart"
                                    android:textAllCaps = "true"
                                    android:textColor = "@color/white"
                                    android:textStyle = "bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width = "match_parent"
                                android:layout_height = "wrap_content"
                                android:layout_gravity = "center"
                                android:layout_marginTop = "@dimen/_15sdp"
                                android:orientation = "horizontal"
                                android:paddingRight = "@dimen/_6sdp">

                                <Button
                                    android:id = "@+id/society_btn_join_now"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_weight = "1"
                                    android:backgroundTint="#f06463"
                                    android:text = "Join Now"
                                    android:textAllCaps = "false"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:textColor = "@color/white" />

                                <Button
                                    android:id = "@+id/society_btn_get_contacts"
                                    android:layout_width = "match_parent"
                                    android:layout_height = "wrap_content"
                                    android:layout_weight = "1"
                                    android:backgroundTint = "#007700"
                                    android:text = "Get Contacts"
                                    android:textAllCaps = "false"
                                    android:textColor = "@color/white"
                                    tools:visibility = "visible" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </FrameLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>