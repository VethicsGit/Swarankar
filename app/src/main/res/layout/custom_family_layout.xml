<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_family"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/basic_family_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/family_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/relation_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    tools:text="TextView" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_edit_basic_family"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Edit"
                app:srcCompat="@drawable/ic_edit_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/other_family_details_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/other_family_list_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/other_relation_tag_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/other_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/other_partner_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/other_son_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    tools:text="TextView" />

                <TextView
                    android:id="@+id/other_daughter_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:textAllCaps="false"
                    tools:text="TextView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btn_edit_other_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    app:srcCompat="@drawable/ic_edit_black_24dp" />

                <ImageButton
                    android:id="@+id/btn_delete_other_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    app:srcCompat="@drawable/ic_close_black_24dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>