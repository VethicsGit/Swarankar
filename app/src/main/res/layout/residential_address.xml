    android:orientation="vertical">

<LinearLayout
    android:id="@+id/lv_residetial_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:background="#E6E6E6"
    android:orientation="vertical">
