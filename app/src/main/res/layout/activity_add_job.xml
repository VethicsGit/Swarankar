<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.swarankar.Activity.Activity.AddJobActivity">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <EditText
                    android:id="@+id/activity_add_job_ed_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    style="@style/editText"
                    android:hint="Enter the Job"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/activity_add_job_sp_area_work"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"

                        android:alpha="0.8"
                        android:hint="Enter the Job"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="#919191" />

                </LinearLayout>

                <EditText
                    android:id="@+id/activity_add_job_ed_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:alpha="0.8"
                    style="@style/editText"
                    android:hint="Enter Department"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/activity_add_job_ed_select_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:alpha="0.8"
                    style="@style/editText"
                    android:hint="Enter Designation"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/activity_add_job_ed_contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/editText"
                        android:alpha="0.8"

                        android:hint="Contact Name"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/activity_add_job_ed_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:alpha="0.8"

                        android:hint="Contact Number"
                        android:inputType="number"
                        android:maxLength="10"
                        style="@style/editText"

                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/activity_add_job_ed_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:alpha="0.8"
                    style="@style/editText"
                    android:hint="Contact Email Address"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_add_job_txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:alpha="0.7"
                        android:hint="Last Date to applying on this job "
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_3sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/activity_add_job_image_calender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9"
                        android:src="@drawable/calander2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#919191"></LinearLayout>

                <EditText
                    android:id="@+id/activity_add_job_ed_qualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:alpha="0.8"
                    style="@style/editText"
                    android:background="@drawable/border1"
                    android:gravity="top"
                    android:hint="Qualification*"
                    android:minHeight="@dimen/_80sdp"
                    android:overScrollMode="always"
                    android:paddingLeft="@dimen/_2sdp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/activity_add_job_ed_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:alpha="0.8"
                    android:background="@drawable/border1"
                    android:gravity="top"
                    style="@style/editText"
                    android:hint="Job Description*"
                    android:minHeight="@dimen/_80sdp"
                    android:paddingLeft="@dimen/_2sdp"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <Button
                android:id="@+id/activity_add_job_btn_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="#229fbd"
                android:text="ADD"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
