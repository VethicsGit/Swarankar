<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id = "@+id/card_view"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:background = "@drawable/gradient7"
    card_view:cardElevation="5dp"
    android:elevation="10dp"
    android:layout_margin="4dp"
    card_view:cardCornerRadius = "4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout

            android:layout_width = "match_parent"
            android:layout_height = "200dp">

        <ImageView
            android:id="@+id/news_item_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:padding="@dimen/_5sdp"
            android:background="@mipmap/ic_launcher" />
            <RelativeLayout


                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_6sdp">
            <LinearLayout
                android:background="@drawable/bottom_shadow"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_marginTop="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                >
                <de.hdodenhof.circleimageview.CircleImageView

                    android:id="@+id/news_item_profile"
                    android:layout_width="40dp"
                    android:layout_margin="5dp"
                    android:layout_height="40dp"
                    android:background="@drawable/profile"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/news_item_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vijay Sinha"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_8sdp"/>

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/news_item_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2 jun at 5:15Pm"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>
            </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">
            <TextView
                android:id="@+id/news_item_event_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="daada"
                android:paddingLeft="@dimen/_5sdp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="@dimen/_5sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact : "/>
                <TextView
                    android:id="@+id/news_item_contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textAllCaps="true"
                    android:textColor="#1576a1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/news_item_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Explore the Possibilities by Swaranakar"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/news_item_contact_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +91 6548253656"
                android:layout_gravity="start"
                android:layout_marginStart="3dp"
                android:gravity="center|start"
               android:layout_weight="1"
                android:drawableLeft="@drawable/call"/>

            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/news_item_shadual_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" +91 6548253656"
                android:layout_gravity="end"
                android:gravity="center|start"

                android:drawableLeft="@drawable/calander"/>
        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>